<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2"
              xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">

    <application>
        <resource-bundle>
            <base-name>se.kth.ict.iv1201.RecruitmentSystem.View.Messages</base-name>
            <var>messages</var>
        </resource-bundle>
    </application>
    
    <navigation-rule>
        <from-view-id>/loginindex.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>Applicant</from-outcome>
            <to-view-id>Applicant/applicantstart.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-outcome>Recruiter</from-outcome>
            <to-view-id>Recruiter/recruiterstart.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>
    
</faces-config>
